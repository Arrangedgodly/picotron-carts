--[[pod_format="raw",created="2024-12-11 20:55:39",modified="2024-12-12 16:25:25",revision=643]]
include "gui.lua"

function _init()
  get_display()
  window({
    width = 480,
    height = 270,
    title = "temp.afx",
    has_frame = false,
    show_toolbar = true,
    tabbed = true,
    icon = userdata("[gfx]08087770777077707770777077700700070077777707777777777777777777777707[/gfx]"),
    x = 0,
    y = 0
  })
  
  mkdir("/ram/cart/afx")
  
end

function _update()
	gui:update_all()
	
	if key("escape") then
		stop()
	end
end

function _draw()
	cls(theme"window_frame")
	gui:draw_all()
  
end
